    <div class="card">
        @foreach (var post in Model.Posts)
        {
            <div class="card-body">
                <div class="card-title">
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                        @post.Title
                    </a>
                </div>
                <div class="card-text">
                    <div class="author">
                        Author: @post.Author
                    </div>
                    <div class="card-text">
                        Date Posted: @post.DatePosted
                    </div>
                    <div class="card-text">
                        Replies Count: @post.RepliesCount
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.Forum.Name posts yet.<br />
            Why not <a asp-controller ="Post" asp-action ="Create" asp-route-id = "@Model.Forum.Id">
                create
            </a>
            one?
        </h3>
    </div>
    
}